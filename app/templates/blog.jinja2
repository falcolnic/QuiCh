{% block header %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuiCh blog</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/styles/cursor.css" rel="stylesheet">
    <style>
        ::-webkit-scrollbar {
            width: 7px;
        }
        ::-webkit-scrollbar-track {
            background-color: #ffffff;
        }
        ::-webkit-scrollbar-thumb {
            border-radius: 0px;
            background-color: #000000;
        }
        body {
            font-family: 'Fredoka', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        }
        ::selection {
            background-color: #2a2a2a;
            color: #ffffff;
        }
        .navbar .nav-link:hover {
            color: #ff7800 !important;
        }
        .shadow-orange {
            box-shadow: 0 13px 35px -12px rgba(35,35,35,0.15);
        }
        .navbar {
            padding: 0.75rem 1rem;
        }
        @keyframes fadeInLeft {
            0% {
            opacity: 0;
            transform: translateX(-20px);
            }
            100% {
            opacity: 1;
            transform: translateX(0);
            }
        }   
        @-webkit-keyframes fadeInLeft {
            0% {
                opacity: 0;
                transform: translateX(-20px);
                }
            100% {
                opacity: 1;
                transform: translateX(0);
            }
        } 
        @-webkit-keyframes fadeInUp {
            from {
                transform: translate3d(0,40px,0)
            }
            to {
                transform: translate3d(0,0,0);
                opacity: 1
            }
        }
    </style>
{% endblock header%}
