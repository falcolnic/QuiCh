{% block header %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QuiCh - Rate Limit Exceeded</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/styles/cursor.css" rel="stylesheet">
    <style>
        ::-webkit-scrollbar {
            width: 7px;
        }
        ::-webkit-scrollbar-track {
            background-color: #ffffff;
        }
        ::-webkit-scrollbar-thumb {
            border-radius: 0px;
            background-color: #000000;
        }
        body {
            font-family: 'Fredoka', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
        }
        ::selection {
            background-color: #2a2a2a;
            color: #ffffff;
        }
        .navbar .nav-link:hover {
            color: #ff7800 !important;
        }
        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .fade-in-up {
            animation: fadeInUp 0.6s ease-out;
        }
        .pulse-orange {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.7;
            }
        }
    </style>
{% endblock header %}

{% block content %}
<header class="flex w-full bg-white">
    {% include 'navbar.jinja2' %}
</header>

<div class="bg-white flex flex-col justify-center items-center min-h-screen px-4">
    <div class="text-center max-w-2xl mx-auto fade-in-up">
        <!-- Icon -->
        <div class="mb-6">
            <div class="w-24 h-24 bg-orange-100 rounded-full flex items-center justify-center mx-auto pulse-orange">
                <i class="fas fa-clock text-4xl text-orange-500"></i>
            </div>
        </div>

        <!-- Main Message -->
        <h1 class="text-4xl font-bold text-black mb-4">Search Limit Reached</h1>
        <p class="text-xl text-gray-600 mb-6">{{ error_message }}</p>
        
        <!-- Info Cards -->
        <div class="grid md:grid-cols-2 gap-4 mb-8">
            <div class="bg-orange-50 p-6 rounded-lg border border-orange-200">
                <div class="flex items-center mb-3">
                    <i class="fas fa-info-circle text-orange-500 text-lg mr-2"></i>
                    <h3 class="font-semibold text-gray-800">Current Limit</h3>
                </div>
                <p class="text-gray-600">{{ limit_info }}</p>
            </div>
            
            <div class="bg-blue-50 p-6 rounded-lg border border-blue-200">
                <div class="flex items-center mb-3">
                    <i class="fas fa-infinity text-blue-500 text-lg mr-2"></i>
                    <h3 class="font-semibold text-gray-800">Unlimited Access</h3>
                </div>
                <p class="text-gray-600">Create a free account for unlimited searches and more features!</p>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
            <a href="/v1/signup" class="btn btn-lg px-8 py-3 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition-colors font-semibold">
                <i class="fas fa-user-plus mr-2"></i>
                Create Free Account
            </a>
            <a href="/v1/signin" class="btn btn-lg px-8 py-3 border-2 border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-semibold">
                <i class="fas fa-sign-in-alt mr-2"></i>
                Sign In
            </a>
        </div>

        <!-- Alternative Options -->
        <div class="text-center">
            <p class="text-gray-500 mb-4">{{ retry_info }}</p>
            <div class="flex justify-center space-x-4">
                <a href="/" class="text-orange-500 hover:text-orange-600 font-medium">
                    <i class="fas fa-home mr-1"></i>
                    Go Home
                </a>
                <span class="text-gray-300">|</span>
                <a href="/blog" class="text-orange-500 hover:text-orange-600 font-medium">
                    <i class="fas fa-blog mr-1"></i>
                    Read Our Blog
                </a>
            </div>
        </div>
    </div>
</div>

<footer class="py-4 mt-10">
    <div class="container mx-auto flex justify-between items-center px-16">
        <!-- Left side -->
        <div class="text-lg">
            <a href="/privacy" class="hover:text-orange-500 mr-4">Privacy Policy</a>
            <a href="/tos" class="hover:text-orange-500">TOS</a>
        </div>
        <!-- Center -->
        <div class="cursor text-md text-gray-600">
            Copyright &copy; 2025 QuiCh.
        </div>
        <!-- Right side -->
        <div class="flex space-x-4">
            <a href="https://facebook.com" target="_blank" class="hover:text-orange-500 transition-all duration-[0.3s] ease-[ease-in-out] ml-[80px]">
                <i class="fab fa-facebook-f fa-lg"></i>
            </a>
            <a href="https://linkedin.com" target="_blank" class="hover:text-orange-500 transition-all duration-[0.3s] ease-[ease-in-out] ml-[40px]">
                <i class="fab fa-linkedin fa-lg"></i>
            </a>
        </div>
    </div>
</footer>
{% endblock content %}